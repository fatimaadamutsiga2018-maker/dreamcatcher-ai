// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  directUrl    = env("DIRECT_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  sessions      Session[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Energy System
  energyBalance Int       @default(0)
  lastCheckin   DateTime?
  isSubscriber  Boolean   @default(false)
  stripeSubscriptionId String?
  referralCode  String?   @unique
  referredById   String?

  // Relations
  energyHistory EnergyHistory[]
  transactions  Transaction[]
  orders        Order[]
  energyLedger  EnergyLedger[]
  referredBy     User?     @relation("UserReferrals", fields: [referredById], references: [id])
  referredUsers  User[]    @relation("UserReferrals")
  checkins       Checkin[]
}

// Energy usage/acquisition history (for display)
model EnergyHistory {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Int      // positive = earned, negative = consumed
  type        String   // 'checkin' | 'personal_timing' | 'detailed_insight' | 'share' | 'purchase' | 'subscription' | 'referral' | 'welcome' | 'expired'
  description String?
  metadata     Json?    // additional data
  createdAt   DateTime @default(now())

  @@index([userId, createdAt])
}

// Payment/top-up records (legacy, kept for compatibility)
model Transaction {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  amount          Int      // Energy quantity
  price           Int      // cents
  currency        String   @default("usd")
  type            String   // 'topup' | 'subscription'
  stripePaymentId String?
  status          String   @default("pending")
  createdAt       DateTime @default(now())

  @@index([userId])
}

// Order tracking for refund logic
model Order {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id])
  type             String   // 'topup' | 'subscription'
  purchasedEnergy  Int      // Energy amount purchased
  consumedEnergy   Int      @default(0) // Track if any Energy was used
  price            Int      // cents
  currency         String   @default("usd")
  stripePaymentId  String?
  status           String   @default("pending") // 'pending' | 'completed' | 'refunded' | 'cancelled'
  refundableUntil  DateTime? // 7 days from purchase for topup
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@index([userId])
  @@index([status])
}

// Energy Ledger - tracks source and expiration (FIFO consumption)
model EnergyLedger {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  source    String   // 'free' | 'paid'
  amount    Int      // remaining amount in this bucket
  initialAmount Int  // original amount for reference
  expiresAt DateTime // 30 days for free, 180 days for paid
  orderId   String?  // Link to Order if paid
  consumedAt DateTime? // When fully consumed
  createdAt DateTime @default(now())

  @@index([userId, expiresAt])
  @@index([expiresAt]) // For cleanup jobs
}

// Daily check-in records
model Checkin {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  date      DateTime @default(now())
  energy    Int      @default(5)
  createdAt DateTime @default(now())

  @@unique([userId, date])
  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model GuestMessage {
  id          String   @id @default(cuid())
  content     String
  contactInfo String?
  isRead      Boolean  @default(false)
  createdAt   DateTime @default(now())
}
